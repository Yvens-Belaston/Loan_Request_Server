      "type" : "boolean",
      "defaultValue" : true,
      "bond" : "constant"
    },
    {
      "label" : "Label",
      "name" : "label",
      "showFor" : "properties.labelHidden.value === false",
      "type" : "text",
      "defaultValue" : "Default label",
      "bond" : "interpolation"
    },
    {
      "label" : "Label position",
      "name" : "labelPosition",
      "showFor" : "properties.labelHidden.value === false",
      "type" : "choice",
      "defaultValue" : "top",
      "choiceValues" : [
        "left",
        "top"
      ],
      "bond" : "constant"
    },
    {
